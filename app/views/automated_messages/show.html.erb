<div class="message-detail">
  <div class="message-container">
    <div class="message-header">
      <div class="back-link">
        <%= link_to "← Back to Inbox", automated_messages_path %>
      </div>

      <div class="message-meta">
        <div class="sender-info">
          <% if @message.user == current_user %>
            <strong>From: <%= @message.sender.name %></strong>
          <% else %>
            <strong>To: <%= @message.user.name || @message.user.email %></strong>
          <% end %>
        </div>
        <div class="message-date">
          <%= @message.sent_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>

    <div class="original-message">
      <% if @message.rendered_subject.present? %>
        <h2 class="message-subject"><%= @message.rendered_subject %></h2>
      <% end %>

      <div class="message-body">
        <%= simple_format(@message.rendered_message) %>
      </div>

      <div class="message-template-info">
        <small class="text-muted">
          From template: <%= @message.message_template.name %>
        </small>
      </div>
    </div>

    <!-- Conversation Thread -->
    <% if @replies.any? %>
      <div class="conversation-thread">
        <h3>Conversation</h3>

        <% @replies.each do |reply| %>
          <div class="reply-item <%= reply.sender == current_user ? 'sent' : 'received' %>">
            <div class="reply-header">
              <strong><%= reply.sender.name %></strong>
              <span class="reply-time"><%= time_ago_in_words(reply.created_at) %> ago</span>
            </div>
            <div class="reply-body">
              <%= simple_format(reply.message_body) %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Reply Form -->
    <% if @message.can_reply?(current_user) %>
      <div class="reply-form">
        <h3>Reply to <%= @message.sender.name %></h3>

        <%= form_with(url: reply_automated_message_path(@message), method: :post) do |f| %>
          <%= f.text_area :message_body,
                          placeholder: "Write your reply...",
                          rows: 4,
                          class: "form-control",
                          required: true %>

          <%= f.submit "Send Reply", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% elsif @message.buyer_replied %>
      <div class="reply-notice">
        ✓ You've already replied to this message. Check your inbox for the seller's response.
      </div>
    <% end %>
  </div>
</div>

